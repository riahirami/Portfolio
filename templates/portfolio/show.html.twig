{% extends 'base.html.twig' %}


{% block show %}
	<div class="container show">
		<div class="row ">
			<div class="col-md-12 col-lg-12">


				<h1 class="text-center">{{ p.nom }}
					</h1>
				<img class="img-fluid" src="{{asset('uploads/')}}{{p.image}}"/>
<br>
<br>
				 <p><b>Description :</b> {{p.description}}</p>
					<span class="badge bg-warning">statut :  {{p.statut}}</span>
			<hr>


				{% if  	app.user %}
					<a class="btn btn-warning" href="{{ path("editerProjet",{'id':p.id}) }}">modifier</a>
					<a class="btn btn-danger" href="{{ path("supprimer",{'id':p.id}) }}">supprimer</a>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
